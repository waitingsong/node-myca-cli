{
  "name": "myca-cli",
  "version": "0.1.0",
  "description": "command line of creating Self-signed CA certificate for development use and issue server or client certificates, generated using openssl",
  "main": "./dist/index.js",
  "bin": {
    "myca": "./dist/bin/myca-cli.js"
  },
  "scripts": {
    "build": "npm run clean && npm run lint && npm run build:ts && npm run jslint",
    "build:ts": "tsc -p ./ --outDir dist/",
    "clean": "rm -rf dist/*",
    "cov": "nyc mocha",
    "cov:coveralls": "nyc mocha && nyc report --reporter=text-lcov | coveralls",
    "jslint": "eslint --fix dist/**/*.js",
    "lint": "tslint -p tslint.json -e **/*.d.ts -t stylish src/**/*.ts test/**/*.ts",
    "prepublishOnly": "npm run build",
    "test": "npm run test:travis",
    "test:appveyor": "mocha --config test/mocha.appveyor.opts",
    "test:travis": "mocha --config test/mocha.travis.opts"
  },
  "keywords": [
    "CA",
    "cert",
    "csr",
    "certificate",
    "ec",
    "ecc",
    "Elliptic Curve",
    "openssl",
    "pkcs",
    "PKCS8",
    "PKCS12",
    "pfx",
    "p12",
    "P-256",
    "P-384",
    "prime256v1",
    "secp384r1",
    "RSA",
    "self signed",
    "SAN",
    "SSL",
    "TLS",
    "x509"
  ],
  "nyc": {
    "exclude": [
      "**/*.js",
      "**/*.test.ts",
      "**/*.d.ts",
      "test",
      "dist",
      "src/bin"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "waiting",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/node-myca-cli.git"
  },
  "bugs": {
    "url": "https://github.com/waitingsong/node-myca-cli/issues"
  },
  "homepage": "https://github.com/waitingsong/node-myca-cli#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "myca": "^1.11.3",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.9.2",
    "@types/power-assert": "^1.4.29",
    "@types/rewire": "^2.5.28",
    "@types/rimraf": "^2.0.2",
    "@types/yargs": "^10.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.17.0",
    "intelli-espower-loader": "^1.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mz-modules": "^2.0.0",
    "nyc": "^11.4.1",
    "power-assert": "^1.4.4",
    "rewire": "^3.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.7.1"
  }
}
